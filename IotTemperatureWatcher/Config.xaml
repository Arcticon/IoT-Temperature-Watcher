<Page
    x:Class="IotTemperatureWatcher.Config"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IotTemperatureWatcher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.TopAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid>
                    
                </Grid>
            </CommandBar.Content>
            <AppBarButton Icon="Accept" Label="appbarbutton" Click="clickAppBarButtonAccept"/>
            <AppBarButton Icon="Cancel" Label="appbarbutton"/>
        </CommandBar>
    </Page.TopAppBar>
    <Frame x:Name="FrameConfig">
        <Grid x:Name="GridConfig" Background="#FF336ea5">
            <CheckBox x:Name="checkBoxAdvancedCustomMode" Content="Advanced" HorizontalAlignment="Left" Margin="1447,105,0,0" Checked="checkedCheckBoxAdvancedCustomMode" Unchecked="uncheckedCheckBoxAdvancedCustomMode" VerticalAlignment="Top" IsEnabled="False" IsChecked="False"/>

            <TextBlock x:Name="textBlockVentilator1" HorizontalAlignment="Left" Margin="170,100,0,0" TextWrapping="Wrap" Text="Ventilator 1 OFF" VerticalAlignment="Top" Width="200" Height="40" SelectionHighlightColor="#FF841439" Foreground="#FF3F3F3F" FontSize="25" FontWeight="Bold"/>
            <TextBlock x:Name="textBlockVentilator2" HorizontalAlignment="Left" Margin="470,100,0,0" TextWrapping="Wrap" Text="Ventilator 2 OFF" VerticalAlignment="Top" Width="200" Height="40" SelectionHighlightColor="#FF841439" Foreground="#FF3F3F3F" FontSize="25" FontWeight="Bold"/>
            <TextBlock x:Name="textBlockTemperature1" HorizontalAlignment="Left" Margin="355,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="40" SelectionHighlightColor="#FF3F3F3F" Foreground="#FF841439" FontSize="25" FontWeight="Bold"/>
            <TextBlock x:Name="textBlockTemperatureText1" HorizontalAlignment="Left" Margin="170,200,0,0" TextWrapping="Wrap" Text="Temperature 1: " VerticalAlignment="Top" Width="200" Height="40" SelectionHighlightColor="#FF841439" Foreground="#FF3F3F3F" FontSize="25" FontWeight="Bold"/>
            <TextBlock x:Name="textBlockTemperatureText2" HorizontalAlignment="Left" Margin="470,200,0,0" TextWrapping="Wrap" Text="Temperature 2: " VerticalAlignment="Top" Width="200" Height="40" SelectionHighlightColor="#FF841439" Foreground="#FF3F3F3F" FontSize="25" FontWeight="Bold"/>
            <TextBlock x:Name="textBlockTemperature2" HorizontalAlignment="Left" Margin="655,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="40" SelectionHighlightColor="#FF3F3F3F" Foreground="#FF841439" FontSize="25" FontWeight="Bold"/>
            <TextBlock x:Name="textBlockUpperTemp1" HorizontalAlignment="Left" Margin="1267,287,0,0" TextWrapping="Wrap" Text="Upper Temperature1 (V1): 38" VerticalAlignment="Top" Opacity="0.4" />
            <TextBlock x:Name="textBlockUpperTemp1V2" HorizontalAlignment="Left" Margin="1267,317,0,0" TextWrapping="Wrap" Text="Upper Temperature1 (V2): 38" VerticalAlignment="Top" Opacity="0.4" />
            <TextBlock x:Name="textBlockLowerTemp1" HorizontalAlignment="Left" Margin="1267,372,0,0" TextWrapping="Wrap" Text=" Lower Temperature1:       34" VerticalAlignment="Top" Opacity="0.4" />
            <TextBlock x:Name="textBlockUpperTemp2" HorizontalAlignment="Left" Margin="1267,427,0,0" TextWrapping="Wrap" Text="Upper Temperature2 (V2): 32" VerticalAlignment="Top" Opacity="0.4" />
            <TextBlock x:Name="textBlockUpperTemp2V1" HorizontalAlignment="Left" Margin="1267,457,0,0" TextWrapping="Wrap" Text="Upper Temperature2 (V1): 32" VerticalAlignment="Top" Opacity="0.4" />
            <TextBlock x:Name="textBlockLowerTemp2" HorizontalAlignment="Left" Margin="1267,512,0,0" TextWrapping="Wrap" Text="Lower Temperature2:        27" VerticalAlignment="Top" Opacity="0.4" />



            <ToggleSwitch x:Name="toggleSwitchCustomMode" HorizontalAlignment="Left" Margin="1270,80,0,0" VerticalAlignment="Top" Width="154" Toggled="toggledToggleSwitchCustomMode" OffContent="OFF" OnContent="ON" Header="Settings"/>



            <ToggleSwitch x:Name="toggleSwitchVentilator1" Header="Ventilator 1" HorizontalAlignment="Left" Margin="1267,180,0,0" VerticalAlignment="Top" Width="154" Toggled="toggledToggleSwitchVentilator1" OffContent="OFF" OnContent="ON" IsEnabled="False"/>
            <ToggleSwitch x:Name="toggleSwitchVentilator2" Header="Ventilator 2" HorizontalAlignment="Left" Margin="1467,180,0,0" VerticalAlignment="Top" Width="154" Toggled="toggledToggleSwitchVentilator2" OffContent="OFF" OnContent="ON" IsEnabled="False"/>
            <Slider x:Name="sliderUpperTemp1" Foreground="#FF841439" HorizontalAlignment="Left" Margin="1467,280,0,0" VerticalAlignment="Top" Width="100" Value="38" ValueChanged="valueChangedSliderUpperTemp1" SmallChange="0.01" Maximum="50" Minimum="20" IsEnabled="False" Visibility="Visible"/>
            <Slider x:Name="sliderUpperTemp1V2" Foreground="#FF841439" HorizontalAlignment="Left" Margin="1467,310,0,0" VerticalAlignment="Top" Width="100" Value="38" ValueChanged="valueChangedSliderUpperTemp1V2" SmallChange="0.01" Maximum="50" Minimum="20" IsEnabled="False" Visibility="Visible"/>
            <Slider x:Name="sliderLowerTemp1" HorizontalAlignment="Left" Margin="1467,365,0,0" VerticalAlignment="Top" Width="100" Value="34" ValueChanged="valueChangedSliderLowerTemp1" SmallChange="0.01" Maximum="50" Minimum="20" IsEnabled="False" Visibility="Visible" Foreground="#FF841439"/>
            <Slider x:Name="sliderUpperTemp2" HorizontalAlignment="Left" Margin="1467,420,0,0" VerticalAlignment="Top" Width="100" Value="32" ValueChanged="valueChangedSliderUpperTemp2" SmallChange="0.01" Maximum="50" Minimum="20" IsEnabled="False" Visibility="Visible" Foreground="#FF841439" />
            <Slider x:Name="sliderUpperTemp2V1" HorizontalAlignment="Left" Margin="1467,450,0,0" VerticalAlignment="Top" Width="100" Value="32" ValueChanged="valueChangedSliderUpperTemp2V1" SmallChange="0.01" Maximum="50" Minimum="20" IsEnabled="False" Visibility="Visible" Foreground="#FF841439" />
            <Slider x:Name="sliderLowerTemp2" HorizontalAlignment="Left" Margin="1467,505,0,0" VerticalAlignment="Top" Width="100" Value="27" ValueChanged="valueChangedSliderLowerTemp2" SmallChange="0.01" Maximum="50" Minimum="20" IsEnabled="False" Visibility="Visible" Foreground="#FF841439" />

            <ProgressBar x:Name="progressBar2" Background ="#FFCBCBCB" BorderBrush ="#FF841439" HorizontalAlignment="Left" Height="200" Margin="290,440,0,0" VerticalAlignment="Top" Width="550" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" SmallChange="0.01" BorderThickness="4">
                <ProgressBar.RenderTransform>
                    <CompositeTransform Rotation="-90"/>
                </ProgressBar.RenderTransform>
            </ProgressBar>
            <ProgressBar x:Name="progressBar1" Background ="#FFCBCBCB" BorderBrush ="#FF841439" HorizontalAlignment="Left" Height="200" Margin="-10,440,0,0" VerticalAlignment="Top" Width="550" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" SmallChange="0.01" BorderThickness="4">
                <ProgressBar.RenderTransform>
                    <CompositeTransform Rotation="-90"/>
                </ProgressBar.RenderTransform>
            </ProgressBar>

            <Popup x:Name="popupTest" Opened="openedPopupTest" Closed="closedPopupTest">
                <Grid Background="#FF336ea5" Height="1050" Width="1680">
                    <TextBlock x:Name="textBlockPopupErrorMessage" HorizontalAlignment="Left" Margin="699,276,0,0" TextWrapping="Wrap" Text="Error Message: " VerticalAlignment="Top" Foreground="White"/>
                    <Button x:Name="buttonPopupOk" Background="White" Content="&#xE830;" Style="{ThemeResource NavigationBackButtonNormalStyle}" HorizontalAlignment="Left" Margin="1472,900,0,0" VerticalAlignment="Top" Click="clickedButtonPopupOk" />
                </Grid>
            </Popup>
        </Grid>
    </Frame>
</Page>
